# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
# This will be replaced with actual Railway database URL

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-key-here-change-this-in-production
JWT_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here

# OpenAI Configuration (Admin Internal Keys for Free Trial)
OPENAI_API_KEY=your-openai-api-key-here
DALLE_API_KEY=your-dalle-api-key-here

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# AWS Lambda Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# WordPress Configuration
WORDPRESS_TIMEOUT=30000
WORDPRESS_RETRY_ATTEMPTS=3

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-here

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

